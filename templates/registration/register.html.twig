{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="box">
                        {{ form_start(registrationForm) }}
                        <h2>Ajouter utilisateur</h2>
                        <div class="row">
                            <div class="col-4 ">
                                {{ form_label(registrationForm.pseudo) }}
                            </div>
                            <div class="col-8">
                                {{ form_widget(registrationForm.pseudo) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4 ">
                                {{ form_label(registrationForm.nom) }}
                            </div>
                            <div class="col-8">
                                {{ form_widget(registrationForm.nom) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4 ">
                                {{ form_label(registrationForm.prenom) }}
                            </div>
                            <div class="col-8">
                                {{ form_widget(registrationForm.prenom) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4 ">
                                {{ form_label(registrationForm.telephone) }}
                            </div>
                            <div class="col-8">
                                {{ form_widget(registrationForm.telephone) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4 ">
                                {{ form_label(registrationForm.email) }}
                            </div>
                            <div class="col-8">
                                {{ form_widget(registrationForm.email) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4 ">
                                {{ form_label(registrationForm.password) }}
                            </div>
                            <div class="col-8">
                                {{ form_widget(registrationForm.password) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4 ">
                                {{ form_label(registrationForm.campus) }}
                            </div>
                            <div class="col-8">
                                {{ form_widget(registrationForm.campus) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4 ">
                                {{ form_label(registrationForm.administrateur) }}
                            </div>
                            <div class="col-8">
                                {{ form_widget(registrationForm.administrateur) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4 ">
                                {{ form_label(registrationForm.actif) }}
                            </div>
                            <div class="col-8">
                                {{ form_widget(registrationForm.actif) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4 ">
                                {{ form_label(registrationForm.picture) }}
                            </div>
                            <div class="col-8">
                                {{ form_widget(registrationForm.picture) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 ">
                                <button type="submit" value="Enregistrer">Enregister</button>
                            </div>
                            <div class="col-6">
                                <button type="reset" value="Annuler">Annuler</button>
                            </div>
                        </div>

                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
